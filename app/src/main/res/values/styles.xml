<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography -->
    <style name="TextAppearance" parent="TextAppearance.AppCompat.Body2" />

    <style name="TextAppearance.CaptionBold">
        <item name="fontFamily">@font/stream_roboto_bold</item>
        <item name="android:fontFamily">@font/stream_roboto_bold</item>
