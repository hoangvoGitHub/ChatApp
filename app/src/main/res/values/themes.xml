    <style name="Theme.ChatApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>

        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>

        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>
        <item name="android:statusBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="MessageEditText" parent="android:Widget.EditText">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:backgroundTint">@color/message_input</item>
        <item name="android:hint">@string/type_here</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
    </style>

    <style name="Theme.ChatApp.SendButton" parent="android:Widget.ImageButton">
        <item name="android:backgroundTint">@color/md_theme_light_background</item>
    </style>

    <style name="Theme.ChatApp.InputBarIcon" parent="android:Widget.ImageButton">
        <item name="android:backgroundTint">@color/md_theme_light_background</item>
        <item name="android:tint">@color/input_bar_icon</item>
        <item name="android:paddingVertical">@dimen/spacing_small</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Theme.ChatApp.HeaderNameTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.ChatApp.LogOutTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/light_drawer_icon</item>
    </style>

    <style name="Theme.ChatApp.LogOutImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@color/light_drawer</item>
        <item name="android:tint">@color/light_drawer_icon</item>
    </style>

    <style name="Theme.ChatApp.HeaderEmailTextView" parent="Theme.ChatApp.HeaderNameTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="Theme.ChatApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/md_theme_light_onBackground</item>
    </style>

    <style name="Theme.ChatApp.ChannelView">
        <item name="android:background">@color/md_theme_light_background</item>
    </style>

    <style name="Theme.ChatApp.HeaderView">
        <item name="android:background">@color/md_theme_light_surfaceContainerHigh</item>
    </style>

    <style name="Theme.ChatApp.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:padding">4dp</item>
        <item name="android:queryHint">@string/friend_search_hint</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:backgroundTint">@color/light_search_view</item>
    </style>


    <style name="Theme.ChatApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChatApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>